---
import contactContent from '../data/contactContent.json';
import '../styles/global.css';
import Button from './button.astro';
import ContactItem from './contactItem.astro';
---

<div class="bg-neutral-700 pt-[96px] w-full mx-auto">
  <div class="max-w-[1420px] mx-auto w-full p-6">
    <div class="flex flex-col lg:flex-row gap-6">
      <div class="flex-1 flex flex-col lg:flex-row justify-between">
        <div class="space-y-6">
          <div>
            <p class="font-poppins text-sm text-neutral-600 uppercase">
              Contato
            </p>
            <h3
              class="font-playfair text-3xl lg:text-5xl font-medium text-neutral-100 leading-tight"
            >
              {contactContent.title}
            </h3>
          </div>
          <div class="gap-4">
            {
              contactContent.contacts.map((contact) => (
                <ContactItem
                  icon={contact.icon}
                  description={contact.description}
                />
              ))
            }
          </div>
        </div>
      </div>

      <div class="flex-1 flex">
        <div
          class="bg-neutral-100 rounded-lg py-[96px] px-6 flex flex-col w-full"
        >
          <div>
            <h3
              class="font-playfair text-2xl lg:text-4xl font-semibold text-neutral-800"
            >
              {contactContent.titleCard}
            </h3>

            <form class="pt-6">
              <div>
                <label
                  class="block font-poppins text-sm text-neutral-700"
                  for="fullName"
                >
                  Nome Completo
                </label>
                <input
                  id="fullName"
                  name="fullName"
                  type="text"
                  placeholder=""
                  class="w-full p-2 border-0 border-b-2 border-b-neutral-700 focus:outline-none bg-transparent"
                  required
                />
              </div>
            </form>
          </div>

          <div class="pt-6">
            <Button
              text={contactContent.textButton}
              class="bg-brown-dark text-neutral-100 w-full justify-center"
            />
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
