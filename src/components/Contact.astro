---
import '../styles/global.css';
import Button from './button.astro';
import ContactItem from './contactItem.astro';
import contactContent from '../data/contactContent.json';
---

<div class="bg-neutral-700 flex justify-center py-14 px-4 lg:py-24 lg:px-56">
  <div class="w-full max-w-[1472px] flex flex-col lg:flex-row gap-8 lg:gap-16">
    <div class="w-full lg:w-1/2 leading-tight">
      <p class="font-poppins text-sm text-neutral-600 uppercase">Contato</p>
      <h3
        class="font-playfair text-[32px] lg:text-[42px] text text-neutral-100 pb-6"
      >
        {contactContent.title}
      </h3>
      <div class="space-y-4">
        {
          contactContent.contacts.map((contact) => (
            <ContactItem
              icon={contact.icon}
              description={contact.description}
            />
          ))
        }
      </div>
    </div>

    <div class="bg-neutral-100 w-full flex lg:w-1/2 rounded-lg">
      <div class="p-6 md:p-14 lg:py-14 lg:px-12 w-full">
        <h3
          class="font-playfair text-[28px] lg:text-[32px] font-semibold text-neutral-800 pb-8 text-center"
        >
          {contactContent.titleCard}
        </h3>
        <form class="flex flex-col space-y-6">
          <div>
            <label class="font-poppins text-neutral-700 text-sm" for="fullName">
              Nome Completo
            </label>
            <input
              id="fullName"
              name="fullName"
              type="text"
              class="w-full border-0 border-b-2 border-neutral-700 pt-2"
              required
            />
          </div>
        </form>
        <div class="pt-8">
          <Button
            text={contactContent.textButton}
            class="bg-brown-dark hover:bg-neutral-700 text-neutral-100 flex w-full justify-center py-3 rounded-lg transition-colors"
          />
        </div>
      </div>
    </div>
  </div>
</div>
