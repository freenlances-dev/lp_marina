---
import '../styles/global.css';
import aboutContent from '../data/aboutContent.json';
import AboutCard from './aboutCard.astro';
---

<section class="bg-neutral-0">
  <div class="max-w-[1420px] mx-auto px-6 py-14 lg:py-24">
    <div class="flex flex-col lg:flex-row gap-4">
      <div class="w-1/3 leading-tight">
        <div>
          <p
            class="font-poppins font-medium text-sm text-neutral-600 uppercase"
          >
            Sobre
          </p>
          <h2 class="font-playfair text-[32px] lg:text-[56px] text-neutral-800">
            {aboutContent.about_title}
          </h2>
        </div>
      </div>

      <div class="w-full lg:w-2/3 pt-">
        <div class="text-lg lg:text-[20px] font-poppins">
          <p class="pb-4">{aboutContent.about_content_p1}</p>
          <p class="pv-8">{aboutContent.about_content_p2}</p>
        </div>

        <div class="flex flex-col lg:flex-row gap-4 pt-2">
          {
            aboutContent.aboutCard.map((about) => (
              <AboutCard
                icon={about.icon}
                title={about.title}
                description={about.description}
              />
            ))
          }
        </div>
      </div>
    </div>
  </div>
</section>
